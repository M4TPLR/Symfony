{% extends "::base.html.twig" %}
{% block stylesheets %}
    {% stylesheets 'bundles/user/css/register_2.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="text-center">
        <p class="baseline" id="baseline1">We are almost there...</p>
        {{ form_start(form, {'attr': {'class': 'register2Form', 'id': 'register2Form', 'action': path('validate')}}) }}
            <img src="{{ asset('bundles/user/img/profil.png') }}" alt="profil.img" class="d-inline-block img-fluid col-3 col-sm-2 col-md-2 col-lg-1">
            <label class="col-4 btn continue-btn" for="imgPicker" id="imgPickerLabel">Choose an image</label><br>
            <input type="file" name="imgPicker" id="imgPicker" class="form-control custom-file-input col-12">
            <div class="profilSection">
                <h6 class="register-title">Configure your profile</h6><br>
                <div class="col-lg-5 d-inline-block">
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control d-inline-block', 'placeholder': 'Lastname'}}) }}<br><br>
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control d-inline-block', 'placeholder': 'Firstname'}}) }}<br>
                </div>
                <div class="col-lg-5 d-inline-block">
                    {{ form_widget(form.bio, {'attr': {'class': 'form-control d-inline-block', 'rows': '3', 'placeholder': 'Biography'}}) }}<br><br>
                </div>
            </div>
            <br>
            {{ form_widget(form.country, {'attr': {'class': 'col-lg-8 push-lg-2 form-control'}}) }}
            <label for="birthdayInput">Birthday date</label>
            {{ form_widget(form.birthdayDate, {'attr': {'class':'form-control input-group', 'action': path('validate')}}) }}
            {{ form_rest(form) }}
        <img id="nextStep" src="{{ asset('bundles/user/img/whitearrow.png') }}" class="nextstepBtn" alt="continue button">
        {{ form_end(form) }}
    </div>
    <div id="hallSection">
        <form action="#" method="post" id="register3Form" name="register3Form">
            <h6 class="register-title">Configure your hall</h6><br>
            <div class="col-lg-5 d-inline-block">
                <input type="text" id="hallnameInput" name="hallnameInput" placeholder="Hall name"
                       class="form-control  d-inline-block"><br><br>
                <input type="text" id="tagshallInput" name="tagshallInput" placeholder="Hall tags"
                       class="form-control  d-inline-block"><br>
            </div>
            <div class="col-lg-5 d-inline-block">
                <textarea class="form-control d-inline-block" rows="3" name="halldescriptionInput"
                          id="halldescriptionInput" placeholder="Description of the Hall"></textarea><br><br>
            </div>
            <br><br>
            <input type="text" name="legalInput" id="legalInput" class="form-control"
                   placeholder="Type: I agree to the legal conditions"><br><br>
        </form>
        <input type="submit" value="Discover VideHall!" name="submitInput" id="submitInput" class="btn continue-btn">
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts 'bundles/user/js/register2.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}